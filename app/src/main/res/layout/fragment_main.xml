<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kb50group6.tictactoe.MainActivityFragment">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:id="@+id/buttonPlay"
        android:layout_marginTop="82dp"
        android:onClick="onClickButtonPlay"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonHowToPlay" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/how_to_play"
        android:id="@+id/buttonHowToPlay"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButtonHowToPlay"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:id="@+id/buttonExit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        android:onClick="onClickButtonExit" />

</RelativeLayout>
